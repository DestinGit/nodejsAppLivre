<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Titre de la page</title>
  <link rel="stylesheet" type="text/css" href="/assets/semantic/semantic.min.css">
  <style>
  .main.container {
      margin-top: 7em;
  }
  </style>
</head>
<body>
<div class="ui fixed inverted menu">
  <a href="/" class="header item">Accueil</a>
</div>
<div class="ui main container">
    <!-- Afficher les message d'erreur -->
    <% if(locals.flash && locals.flash.error) { %>
        <div class="ui negative message"><%= flash.error %></div>
    <% } %>
    <!--  Afficher les message de success -->
    <% if(locals.flash && locals.flash.success) { %>
    <div class="ui positive message"><%= flash.success %></div>
<% } %>